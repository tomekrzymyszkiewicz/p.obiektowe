<Window x:Class="the_forest_game.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:the_forest_game"
		mc:Ignorable="d"
		Title="The Forest" Height="900" Width="1600" ResizeMode="NoResize" Background="LightSlateGray">
    <Window.Resources>
        <BitmapImage x:Key="Rozbitek" >rozbitek.jpg</BitmapImage>
        <BitmapImage x:Key="Ognisko" >ognisko.jpg</BitmapImage>
    </Window.Resources>
    <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Source="{DynamicResource Ognisko}" Stretch="Fill" Grid.ColumnSpan="5" Grid.RowSpan="4"></Image>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" Background="Gray" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0">Pieniądze:</TextBlock>
                <TextBlock Margin="5" x:Name="pieniadze" FontSize="20"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Column="1" Grid.ColumnSpan="1"></TextBlock>
                <TextBlock Margin="5" Background="Gray" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1">Czas</TextBlock>
                <TextBlock Margin="5" x:Name="godzina" FontSize="24"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Row="1" Grid.Column="1">12:00</TextBlock>
                <TextBlock Margin="5" Background="Gray" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1">Dzień</TextBlock>
                <TextBlock Margin="5" x:Name="dzien" FontSize="24"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Row="1" Grid.Column="3">1</TextBlock>
                <Button Margin="5" FontSize="20" Grid.Column="2" Click="zapisz">Zapisz</Button>
                <Button Margin="5" FontSize="20" Grid.Column="3" Click="wczytaj" >Wczytaj</Button>


            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Background="#5f8847" CornerRadius="20" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" FontSize="35" FontWeight="DemiBold" VerticalAlignment="Center" TextAlignment="Center">EKWIPUNEK</TextBlock>
                <TextBlock Margin="5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Jedzenie</TextBlock>
                <TextBlock Margin="5" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Drewno</TextBlock>
                <TextBlock Margin="5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Kamień</TextBlock>
                <TextBlock Margin="5" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Skóra</TextBlock>
                <TextBlock Margin="5" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Metal</TextBlock>
                <TextBlock Margin="5" Grid.Row="6" Grid.Column="0" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Broń</TextBlock>
                <TextBlock Margin="5" Grid.Row="7" Grid.Column="0" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">Zbroja</TextBlock>
                <TextBlock Margin="5" Grid.Row="1" Grid.Column="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="jedzenie">1</TextBlock>
                <TextBlock Margin="5" Grid.Row="2" Grid.Column="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="drewno">2</TextBlock>
                <TextBlock Margin="5" Grid.Row="3" Grid.Column="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="kamien">3</TextBlock>
                <TextBlock Margin="5" Grid.Row="4" Grid.Column="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="skora">4</TextBlock>
                <TextBlock Margin="5" Grid.Row="5" Grid.Column="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="metal">5</TextBlock>
                <TextBlock Margin="5" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="bron">6</TextBlock>
                <TextBlock Margin="5" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" x:Name="zbroja">7</TextBlock>
            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="3" Background="#4682b4" CornerRadius="20" Padding="7,0,7,10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="35" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Bottom">SKLEP</TextBlock>
                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="sklep" Margin="5" SelectionMode="Single"></ListBox>
                <Button Grid.Row="2" Grid.Column="0" FontSize="20" Margin="10,0,10,0" Click="kup">Kup</Button>
                <Button Grid.Row="2" Grid.Column="1" FontSize="20" Margin="10,0,10,0" Click="sprzedaj">Sprzedaj</Button>
            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="24" Grid.Column="0" Grid.Row="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Życie</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" Grid.Row="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="zycie">100</TextBlock>
                <TextBlock FontSize="24" Grid.Column="0" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Atak</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="atak"></TextBlock>
            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="24" Grid.Column="0" Grid.Row="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Energia</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" Grid.Row="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="energia">100</TextBlock>
                <TextBlock FontSize="24" Grid.Column="0" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Obrona</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="obrona"></TextBlock>
            </Grid>
        </Border>
        <Border Grid.Column="4" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="60" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center">THE FOREST</TextBlock>
                <TextBlock FontSize="24" Grid.Column="0" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Doświadczenie</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" Grid.Row="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="doswiadczenie"></TextBlock>
            </Grid>
        </Border>
        <Border Grid.Column="4" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Las</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="poluj">Poluj</Button>
                <Button Grid.Row="2" FontSize="24" Click="zbieraj">Zbieraj surowce</Button>
            </Grid>
        </Border>
        <Border Grid.Column="4" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Jezioro</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="odpoczywaj">Odpoczywaj</Button>
                <Button Grid.Row="2" FontSize="24" Click="low">Łów</Button>
            </Grid>
        </Border>
        <Border Grid.Column="4" Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Dom<LineBreak/>Sen możliwy tylko w nocy</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="jedz">Jedz</Button>
                <Button Grid.Row="2" FontSize="24" Click="spij">Śpij</Button>
            </Grid>
        </Border>
        <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="4">
            <!-- <Image Source="{DynamicResource Rozbitek}"/> -->
        </Border>
    </Grid>



</Window>
