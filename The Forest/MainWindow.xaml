<Window x:Class="the_forest_game.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:the_forest_game"
		mc:Ignorable="d"
		Title="MainWindow" Height="900" Width="1600" ResizeMode="NoResize" Background="LightSlateGray">
    <Window.Resources>
        <BitmapImage x:Key="Rozbitek" >rozbitek.jpg</BitmapImage>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="850" Width="1590" Margin="00">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" Background="Gray" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0">Pieniądze:</TextBlock>
                <TextBlock Margin="5" x:Name="pieniadze" FontSize="24"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Column="1" Grid.ColumnSpan="2"></TextBlock>
                <TextBlock Margin="5" Background="Gray" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1">Czas</TextBlock>
                <TextBlock Margin="5" x:Name="godzina" FontSize="24"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Row="1" Grid.Column="1">12:00</TextBlock>
                <TextBlock Margin="5" x:Name="dzien" FontSize="24"  TextAlignment="Center" VerticalAlignment="Center" Background="Gray" Grid.Row="1" Grid.Column="2">1</TextBlock>

            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Background="Gray" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" FontSize="24" Margin="5" TextAlignment="Center" VerticalAlignment="Center">Ekwipunek</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" >Jedzenie</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" >Drewno</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" >Kamień</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" >Skóra</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" >Metal</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="6" Grid.Column="0" FontSize="24" TextAlignment="Center" >Broń</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="7" Grid.Column="0" FontSize="24" TextAlignment="Center" >Zbroja</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="1" Grid.Column="2" FontSize="24" TextAlignment="Center" x:Name="jedzenie">1</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="2" Grid.Column="2" FontSize="24" TextAlignment="Center" x:Name="drewno">2</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="3" Grid.Column="2" FontSize="24" TextAlignment="Center" x:Name="kamien">3</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="4" Grid.Column="2" FontSize="24" TextAlignment="Center" x:Name="skora">4</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="5" Grid.Column="2" FontSize="24" TextAlignment="Center" x:Name="metal">5</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" x:Name="bron">6</TextBlock>
                <TextBlock Margin="5" Background="Gray" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" FontSize="24" TextAlignment="Center" x:Name="zbroja">7</TextBlock>
            </Grid>
        </Border>
        <Border Grid.Column="0" Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="24" Background="Gray" TextAlignment="Center" Margin="5">Sklep</TextBlock>
                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="sklep" Margin="5" SelectionMode="Single"></ListBox>
                <Button Grid.Row="2" Grid.Column="0" FontSize="24" Click="kup">Kup</Button>
                <Button Grid.Row="2" Grid.Column="1" FontSize="24" Click="sprzedaj">Sprzedaj</Button>
            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="24" Grid.Column="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Życie</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="zycie">100</TextBlock>
            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="24" Grid.Column="0" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5">Energia</TextBlock>
                <TextBlock FontSize="24" Grid.Column="1" TextAlignment="Center" Background="Gray" VerticalAlignment="Center" Margin="5" x:Name="energia">100</TextBlock>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="0">
            <TextBlock FontSize="60" TextAlignment="Center" VerticalAlignment="Center">THE FOREST</TextBlock>
        </Border>
        <Border Grid.Column="3" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Las</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="poluj">Poluj</Button>
                <Button Grid.Row="2" FontSize="24" Click="zbieraj">Zbieraj surowce</Button>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Jezioro</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="odpoczywaj">Odpoczywaj</Button>
                <Button Grid.Row="2" FontSize="24" Click="low">Łów</Button>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="24" Background="Gray" TextAlignment="Center" VerticalAlignment="Center">Dom<LineBreak/>Sen możliwy tylko w nocy</TextBlock>
                <Button Grid.Row="1" FontSize="24" Click="jedz">Jedz</Button>
                <Button Grid.Row="2" FontSize="24" Click="spij">Śpij</Button>
            </Grid>
        </Border>
        <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="4">
            <Image Source="{DynamicResource Rozbitek}"/>


        </Border>
    </Grid>



</Window>
